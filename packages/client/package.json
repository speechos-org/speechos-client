{
  "name": "@speechos/client",
  "version": "0.2.6",
  "description": "Vanilla JS client SDK for embedding SpeechOS into web applications",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": true,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/speechos-org/speechos-client.git",
    "directory": "packages/client"
  },
  "homepage": "https://speechos.ai",
  "bugs": {
    "url": "https://github.com/speechos-org/speechos-client/issues"
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "rollup -c rollup.config.js",
    "dev": "rollup -c rollup.config.js --watch",
    "dev:iife": "rollup -c rollup.config.js --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "speechos",
    "sdk",
    "client",
    "embed",
    "voice",
    "ai"
  ],
  "author": "SpeechOS",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-alias": "^6.0.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "happy-dom": "^20.1.0",
    "rollup": "^4.30.1",
    "tsdown": "^0.2.0",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@speechos/core": "*",
    "lit": "^3.3.2",
    "lucide": "^0.562.0"
  }
}
